{
  "name": "strict-check",
  "version": "0.0.0",
  "author": "akky-xxxx",
  "license": "MIT",
  "scripts": {
    "check-code": "run-p lint spell-check",
    "fix": "run-p \"fix:*\" -c",
    "fix:eslint": "eslint \"./\" --fix --max-warnings 0",
    "fix:pack": "fixpack",
    "fix:prettier": "prettier \"./*.json\" \"./**/*.json\" !\"./modules/**/*\" !\"./packages/**/*\" -w -u",
    "lint": "run-p \"lint:*\" -c",
    "lint:editorconfig-checker": "ec -dry-run",
    "lint:eslint": "eslint \"./\" --max-warnings 0",
    "lint:pack": "fixpack --dryRun",
    "lint:prettier": "prettier \"./*.json\" \"./**/*.json\" !\"./modules/**/*\" !\"./packages/**/*\" -c -u",
    "postinstall": "run-s \"postinstall:*\"",
    "postinstall:copy-config": "node ./scripts/copy-config/index.js",
    "postinstall:copy-shared": "node ./scripts/copy-shared/index.js",
    "spell-check": "cspell lint --no-progress \"./{config,scripts}/**/*.{js,mjs}\" \"./*.{js,mjs}\"",
    "ws-check-code": "yarn workspaces foreach -A -vpi run check-code",
    "ws-fix": "yarn workspaces foreach -A -vpi run fix",
    "ws-lint": "yarn workspaces foreach -A -vpi run lint",
    "ws-spell-check": "yarn workspaces foreach -A -vpi run spell-check",
    "ws-test": "yarn workspaces foreach -A -vpi run test",
    "ws-type-check": "yarn workspaces foreach -A -vpi run type-check"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.3.0",
    "@stylistic/eslint-plugin": "^2.1.0",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.24",
    "@swc/jest": "^0.2.36",
    "@tsconfig/strictest": "^2.0.5",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/rule-tester": "^7.11.0",
    "@typescript-eslint/utils": "^7.11.0",
    "cspell": "^8.8.3",
    "editorconfig-checker": "^5.1.5",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "fixpack": "^4.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.11.0"
  },
  "workspaces": [
    "modules/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.2.2"
}
